{% block sw_order_saveable_field %}
<sw-container
    v-if="isEditing"
    columns="1fr 20px 25px"
    gap="0px 10px"
    class="sw-order-saveable-field"
>
    {% block sw_order_saveable_field_input %}
    {% block  sw_order_saveable_field_input_field%}
    <component
        :is="component"
        ref="edit-field"
        :value="value"
        :placeholder="placeholder"
        v-bind="$attrs"
    />
    {% endblock %}
    {% endblock %}
    {% block sw_order_saveable_field_actions %}
    {% block sw_order_saveable_field_cancel_button %}
    <!-- TODO Codemod: Converted from sw-button - please check if everything works correctly -->
    <mt-button
        size="x-small"
        square
        aria-label="global.default.cancel"
        @click="onCancelButtonClicked"
    >
        <sw-icon
            name="regular-times-xs"
            small
        />
    </mt-button>
    {%  endblock %}
    {%  block sw_order_saveable_field_save_button %}
    <!-- TODO Codemod: Converted from sw-button - please check if everything works correctly -->
    <mt-button
        size="x-small"
        variant="primary"
        aria-label="global.default.save"
        square
        @click="onSaveButtonClicked"
    >
        <sw-icon
            name="regular-checkmark-xxs"
            small
        />
    </mt-button>
    {%  endblock %}
    {% endblock %}
</sw-container>
<div
    v-else
    role="button"
    tabindex="0"
    @click="onClick"
    @keydown.enter="onClick"
>
    {% block sw_order_saveable_field_content %}
    <slot></slot>
    {% endblock %}
</div>
{% endblock %}
