{% block sw_cms_missing_element_modal %}
<sw-modal
    class="sw-cms-missing-element-modal"
    variant="small"
    :title="$tc('sw-cms.components.cmsMissingElementModal.headline')"
    @modal-close="onClose"
>

    {% block sw_cms_missing_element_modal_title %}
    <p
        class="sw-cms-missing-element-modal__title"
        v-html="title"
    ></p>
    {% endblock %}

    {% block sw_cms_missing_element_modal_subtitle %}
    <p class="sw-cms-missing-element-modal__subtitle">
        {{ $tc('sw-cms.components.cmsMissingElementModal.subtitle') }}
    </p>
    {% endblock %}

    {% block sw_cms_missing_element_modal_paragraph %}
    <p class="sw-cms-missing-element-modal__paragraph">
        {{ $tc('sw-cms.components.cmsMissingElementModal.paragraph') }}
    </p>
    {% endblock %}

    <sw-checkbox-field
        class="sw-cms-missing-element-modal__dont-remind"
        @update:value="onChangeDontRemindCheckbox()"
    >
        <template #label>
            {{ $tc('sw-app.component.sw-app-actions.dontAskMeAgain') }}
        </template>
    </sw-checkbox-field>

    <template #modal-footer>
        {% block sw_cms_missing_element_modal_button_cancel %}
        <!-- TODO Codemod: Converted from sw-button - please check if everything works correctly -->
        <mt-button
            class="sw-cms-missing-element-modal__button-cancel"
            size="small"
            @click="onClose"
        >
            {{ $tc('global.default.cancel') }}
        </mt-button>
        {% endblock %}

        {% block sw_cms_missing_element_modal_button_save %}
        <!-- TODO Codemod: Converted from sw-button - please check if everything works correctly -->
        <mt-button
            class="sw-cms-missing-element-modal__button-save"
            size="small"
            variant="primary"
            @click="onSave"
        >
            {{ $tc('sw-cms.components.cmsMissingElementModal.buttonSave') }}
        </mt-button>
        {% endblock %}
    </template>

</sw-modal>
{% endblock %}
