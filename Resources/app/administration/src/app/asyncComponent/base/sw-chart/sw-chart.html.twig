{% block sw_line_chart %}
<div
    v-if="!isLoading"
    class="sw-chart"
>
    {% block sw_line_chart_multiple %}
    <template
        v-if="needOneDimensionalArray"
    >
        {% block sw_line_chart_multiple_chart %}
        <template
            v-for="(serie, index) in optimizedSeries"
            :key="`multiple-chart-${index}`"
        >
            <apexchart
                v-bind="$attrs"
                :type="type"
                :options="mergedOptions"
                :series="serie.data"
                :height="height"
            />
        </template>
        {% endblock %}
    </template>
    {% endblock %}

    {% block sw_line_chart_single %}
    <apexchart
        v-else
        v-bind="$attrs"
        :type="type"
        :options="mergedOptions"
        :series="optimizedSeries"
        :height="height"
    />
    {% endblock %}
</div>
{% endblock %}
