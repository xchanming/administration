{% block sw_internal_link %}
<component
    :is="elementType"
    v-if="!disabled"
    :to="routerLink"
    :target="target"
    class="sw-internal-link"
    :class="componentClasses"
    @click="$emit('click')"
>

    {% block sw_internal_link__slot %}
    <slot></slot>
    {% endblock %}

    {% block sw_internal_link__icon %}
    <sw-icon
        v-if="!hideIcon"
        :name="icon"
        small
    />
    {% endblock %}

</component>

<span
    v-else
    class="sw-internal-link sw-internal-link--disabled"
>

    {% block sw_internal_link__slot %}
    <slot></slot>
    {% endblock %}

    {% block sw_internal_link__icon %}
    <sw-icon
        v-if="!hideIcon"
        :name="icon"
        small
    />
    {% endblock %}

</span>
{% endblock %}
