{# v-on="$listeners" needed becaues vue/compat removes them from $attrs #}
{# New mt-select component #}
{% block sw_select_field %}
<mt-select
    v-if="useMeteorComponent"
    v-bind="$attrs"
    :options="options"
>
    <template
        v-for="(index, name) in getSlots()"
        #[name]="data"
    >
        <slot
            :name="name"
            v-bind="data"
        >
        </slot>
    </template>
    <!-- TODO Codemod: Remove the "default" slot and use the "options" prop instead -->
    <template #default>
        <slot></slot>
    </template>
</mt-select>
{% endblock %}

