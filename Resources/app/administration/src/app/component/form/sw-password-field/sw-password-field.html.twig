{# v-on="$listeners" needed becaues vue/compat removes them from $attrs #}
{# New mt-password-field component #}
{% block sw_password_field %}
<mt-password-field
    v-if="useMeteorComponent"
    v-bind="$attrs"
    v-model="realValue"
    :placeholder="placeholder"
>
    <template
        v-for="(index, name) in getSlots()"
        #[name]="data"
    >
        <slot
            :name="name"
            v-bind="data || {}"
        >
        </slot>
    </template>
</mt-password-field>
{% endblock %}

