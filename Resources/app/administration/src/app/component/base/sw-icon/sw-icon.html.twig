{# v-on="$listeners" needed becaues vue/compat removes them from $attrs #}
{# New mt-button component #}
{% block sw_icon %}
<mt-icon
    v-if="useMeteorComponent"
    size="24px"
    v-bind="$attrs"
    :name="name"
>
    <slot></slot>
</mt-icon>
{% endblock %}

{# v-on="$listeners" needed becaues vue/compat removes them from $attrs #}
{# Deprecated component #}
{% block sw_icon_deprecated %}
<sw-icon-deprecated
    v-else
    v-bind="$attrs"
    :name="name"
>
    <slot></slot>
</sw-icon-deprecated>
{% endblock %}
